# ROMS V2 - Production Configuration
# Copy this to .env on your Windows Server and fill in your details

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=sqlite+aiosqlite:///./roms_v2.db

# ============================================
# API Configuration
# ============================================
API_V2_HOST=127.0.0.1
API_V2_PORT=8001
API_V2_RELOAD=false

# Security - CHANGE THESE!
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY-IN-PRODUCTION
WEBHOOK_SECRET=CHANGE-THIS-TO-ANOTHER-RANDOM-SECRET

# ============================================
# CORS Settings - UPDATE WITH YOUR DOMAIN
# ============================================
# Add your domain here (replace yourdomain.com with your actual domain)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================
# Webhook Configuration
# ============================================
# This will be your public webhook URL
WEBHOOK_BASE_URL=https://yourdomain.com/api/v2/webhooks

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=backend.log
ENABLE_SQL_LOGGING=false

# ============================================
# Feature Flags
# ============================================
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_SCRAPING=false
ENABLE_WEB_SCRAPING=false
ENABLE_REALTIME_WEBSOCKET=true
ENABLE_SCHEDULER=false

# ============================================
# Background Tasks & Scheduling
# ============================================
# Keep disabled for now until implemented
ENABLE_SCHEDULER=false
SCHEDULER_TIMEZONE=America/New_York

# ============================================
# Email Scraping Configuration (Future)
# ============================================
EMAIL_PROVIDER=gmail
EMAIL_ADDRESS=
EMAIL_APP_PASSWORD=
EMAIL_SCRAPE_INTERVAL_MINUTES=30

# ============================================
# Production Settings
# ============================================
ENVIRONMENT=production
DEBUG=false

