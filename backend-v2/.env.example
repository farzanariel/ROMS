# ROMS V2 Environment Configuration

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=sqlite+aiosqlite:///./roms_v2.db
# For PostgreSQL (future):
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/roms_v2

# ============================================
# API Configuration
# ============================================
API_V2_HOST=0.0.0.0
API_V2_PORT=8001
API_V2_RELOAD=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
WEBHOOK_SECRET=your-webhook-secret-key

# ============================================
# Email Scraping Configuration
# ============================================
EMAIL_PROVIDER=gmail
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_APP_PASSWORD=your_gmail_app_password

# IMAP Settings
IMAP_SERVER=imap.gmail.com
IMAP_PORT=993
IMAP_USE_SSL=true

# Email Scraping Schedule
EMAIL_SCRAPE_INTERVAL_MINUTES=30
EMAIL_FETCH_LIMIT=100

# ============================================
# Webhook Configuration
# ============================================
# External software webhook URL (where ROMS will receive webhooks)
WEBHOOK_BASE_URL=http://localhost:8001/api/v2/webhooks

# ============================================
# Web Scraping Configuration
# ============================================
TARGET_SITE_URL=https://example.com
SCRAPING_USER_AGENT=Mozilla/5.0 (compatible; ROMS-Scraper/2.0)
SCRAPING_TIMEOUT_SECONDS=30
SCRAPING_MAX_RETRIES=3

# Playwright/Browser settings
HEADLESS_BROWSER=true

# ============================================
# Background Tasks & Scheduling
# ============================================
ENABLE_SCHEDULER=true
SCHEDULER_TIMEZONE=UTC

# Redis (optional, for Celery)
REDIS_URL=redis://localhost:6379/0
ENABLE_CELERY=false

# ============================================
# Google Sheets Sync (Optional Bridge)
# ============================================
# Enable syncing to Google Sheets (for backwards compatibility)
ENABLE_SHEETS_SYNC=false
GOOGLE_SHEETS_URL=https://docs.google.com/spreadsheets/d/YOUR_SHEET_ID/edit
V1_API_URL=http://localhost:8000

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
LOG_FILE=backend-v2.log
ENABLE_SQL_LOGGING=false

# ============================================
# Feature Flags
# ============================================
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_SCRAPING=true
ENABLE_WEB_SCRAPING=true
ENABLE_REALTIME_WEBSOCKET=true

# ============================================
# CORS Settings
# ============================================
CORS_ORIGINS=http://localhost:3001,http://localhost:3000

